        }

        .container {
            background-color: #d7fcd7;
            padding: 50px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form input {
            width: 100%;
            padding: 2px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .form {
            margin-bottom: 10px;
        }

        .button {
            padding: 9px 14px;
